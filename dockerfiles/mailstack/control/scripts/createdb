#!/bin/sh
mysql -hdb -uroot -p"$MYSQL_ROOT_PASSWORD" -e"CREATE DATABASE IF NOT EXISTS $DOVECOT_DATABASE"
mysql -hdb -uroot -p"$MYSQL_ROOT_PASSWORD" -e"CREATE DATABASE IF NOT EXISTS $POSTFIX_DATABASE"

mysql -hdb -uroot -p"$MYSQL_ROOT_PASSWORD" -e"CREATE USER IF NOT EXISTS '$MYSQL_USER'@'%' IDENTIFIED BY '$MYSQL_PASSWORD';"
mysql -hdb -uroot -p"$MYSQL_ROOT_PASSWORD" -e"GRANT ALL PRIVILEGES ON $DOVECOT_DATABASE.* TO '$MYSQL_USER'@'%'"
mysql -hdb -uroot -p"$MYSQL_ROOT_PASSWORD" -e"GRANT ALL PRIVILEGES ON $POSTFIX_DATABASE.* TO '$MYSQL_USER'@'%'"